<%- include('partials/header'); -%>
<div class="home_container">
    <div class="home_card">
        <%- include('partials/messages'); -%>
        <div class="alert_success"><%= typeof msg != 'undefined' ? msg : '' %></div>
        <h1>Product Registration</h1>
        <form action="/api/product" method="POST" enctype="multipart/form-data">
            <div class="product_name">
                <label for="title">Product Name<span class="red_info"> *</span></label>
                <input type="text" id="title" name="title" required
                value="<%= typeof title != 'undefined' ? title : '' %>"
                >
            
            </div>
            <div class="description">
                <label for="description">Description<span class="red_info"> *</span></label>
                <textarea name="description" id="description" cols="30" rows="5" required
                value="<%= typeof description != 'undefined' ? description : '' %>"
                >
                </textarea>
            </div>
            <div class="category">
                <select name="category" id="category"
                value=" typeof category != 'undefined' ? category : '' %>"
                >
                    <option value="">Coose category</option>
                    <option value="fabrics">Fabrics</option>
                    <option value="bags">Bags</option>
                    <option value="shoe">Shoe</option>
                    <option value="ornaments">Ornaments</option>
                </select>
            </div>
            <div class="price_form">
                <label for="price">Price<span class="red_info"> *</span></label>
                <input type="text" id="price" name="price" required
                value="<%= typeof price != 'undefined' ? price : '' %>"
                >
            </div>
            <div class="product_name">
                <label for="image">Image Upload</label>
                <input type="file" id="image" name="imageUrl" required>
            </div>
            <button class="home-btn" type="submit">Submit</button>
        </form>
    </div>
    
</div>
<%- include('partials/footer'); -%>